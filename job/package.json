{
  "name": "@fancycan/fcjb",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "private": true,
  "//workspaces": [
    "../library/*"
  ],
  "scripts": {
    "start": "npx tsc -b && node dist/app.js",
    "build": "npx tsc -b",
    "test": "jest",
    "tslint": "npx tslint -c tslint.json -p tsconfig.json",
    "watch-ts": "npx tsc -w",
    "serve-debug": "npx nodemon --inspect dist/app.js",
    "watch-debug": "npx concurrently -k -p \"[{name}]\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "debug": "npm run build && npm run watch-debug",
    "deploy": "npx tsc -b && pm2 delete fcrx && pm2 start --env production"
  },
  "devDependencies": {
    "@types/bson": "^1.0.11",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "@types/config": "^0.0.34",
    "config": "^3.0.1",
    "fancycan-common": "^1.0.7",
    "fancycan-model": "^1.0.5",
    "json-rules-engine": "^2.3.2"
  }
}
